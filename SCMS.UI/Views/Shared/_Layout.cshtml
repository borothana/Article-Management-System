<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - SCMS</title>
	<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
	<link href="~/Content/SCMS.css" rel="stylesheet" type="text/css" />
	@*<script src="~/Scripts/modernizr-2.6.2.js"></script>*@
</head>
<body>
	<div class="navbar-collapse collapse navbar-inverse">
		<ul class="nav navbar-nav">
			@Html.ActionLink("Story Content Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
			<li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown">Menu<b class="caret"></b></a>
				<ul class="dropdown-menu">
					<li>@Html.ActionLink("Log In", "Login", "Auth", null, new { @class = "navbar-left" })</li>
					<li>@Html.ActionLink("Log Out", "Logout", "Home", null, new { @class = "navbar-left" })</li>
					<li>@Html.ActionLink("Sign Up", "SignUp", "SignUp", null, new { @class = "navbar-left" })</li>
					<li>@Html.ActionLink("Profile", "Profile", "Profile", null, new { @class = "navbar-left" })</li>
					<li>@Html.ActionLink("Category", "List", "Category", null, new { @class = "navbar-left" })</li>
					<li>@Html.ActionLink("Intimacy", "List", "Intimacy", null, new { @class = "navbar-left" })</li>
					<li>@Html.ActionLink("Blog", "Blog", "Blog", null, new { @class = "navbar-left" })</li>
					<li>@Html.ActionLink("Info", "List", "Info", null, new { @class = "navbar-left" })</li>
					<li>@Html.ActionLink("User", "List", "User", null, new { @class = "navbar-left" })</li>
					<li>@Html.ActionLink("Reset Password", "ResetPassword", "ResetPassword", null, new { @class = "navbar-left" })</li>
					<li>@Html.ActionLink("Approval Page", "Index", "StpryApproval", null, new { @class = "navbar-left" })</li>
				</ul>
			</li>
		</ul>
	</div>
	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - SCMS</p>
		</footer>
	</div>
	<script src="~/Scripts/jquery-1.10.2.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
	<script src="~/Scripts/scms.js"></script>
	<script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>

</body>
</html>