<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - SCMS</title>
	<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
	<link href="~/Content/SCMS.css" rel="stylesheet" type="text/css" />
	<script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>

    <body style="position: relative !important;">
        <div id="nav" class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <ul class="nav navbar-nav">
                    <li><a href=""><span class="glyphicon glyphicon-home"></span></a></li>
                    <li>@Html.ActionLink("My Article", "Index", "Home")</li>
                    <li>@Html.ActionLink("Blog", "Blog", "Blog")</li>

                    @if (User.Identity.IsAuthenticated)
                    {

                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                @User.Identity.Name
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Add new article", "Add", "Story")</li>
                                <li>@Html.ActionLink("My article list", "List", "Story")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Edit Profile", "Edit", "Profile")</li>
                                <li>@Html.ActionLink("Change Password", "ResetPassword", "ResetPassword")</li>
                            </ul>
                        </li>

                        if (User.IsInRole("admin"))
                        {
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    Admin
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Approval Page", "Index", "StoryApproval")</li>
                                    <li role="separator" class="divider"></li>
                                    <li>@Html.ActionLink("Blog", "List", "Info")</li>
                                    <li role="separator" class="divider"></li>
                                    <li>@Html.ActionLink("Category", "List", "Category")</li>
                                    <li>@Html.ActionLink("Intimacy", "List", "Intimacy")</li>
                                    <li role="separator" class="divider"></li>
                                    <li>@Html.ActionLink("User", "List", "User")</li>
                                </ul>
                            </li>
                        }
                        <li>@Html.ActionLink("Log Out", "LogOut", "Auth")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Sign Up", "SignUp", "Profile")</li>
                        <li>@Html.ActionLink("Log In", "LogIn", "Auth")</li>
                    }
                </ul>
            </div>
        </div>
        <div class="container body-content" style="margin-top:50px">
            @RenderBody()
            @*<footer>
                    <p>&copy; @DateTime.Now.Year - SCMS</p>
                </footer>*@
        </div>
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/scms.js"></script>
        <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    </body>
</html>