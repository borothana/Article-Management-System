@model SCMS.Models.ViewModels.StoryVM

@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Edit Story</h3>
        @Html.ActionLink("Return to home page", "Home", "Home")
    </div>
</div>

<!doctype html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>tinymce example</title>
    <!-- tinymce script reference -->
    <script src="~/scripts/tinymce/tinymce.min.js"></script>
    <!-- script to wire up your tinymce editor -->
    <script type="text/javascript">
        // initialize your tinymce editor with your preferred options
        tinymce.init({
            mode: "textareas",
            theme: "modern",
            // theme options
            theme_advanced_buttons1: "bold,italic,underline, fontselect, fontsizeselect",
            theme_advanced_buttons2: "cut,copy,paste,pastetext,pasteword,|bullist, numlist,|indent,undo, redo,|link, unlink, image, cleanup|insertdate, inserttime, preview,|forecolor, backcolor",
            theme_advanced_buttons4: "insertfile, insertimage",
            theme_advanced_toolbar_location: "top",
            theme_advanced_toolbar_align: "left",
            theme_advanced_statusbar_location: "bottom",
            theme_advanced_resizing: true,
        });
    </script>
</head>
<body>
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("Edit", "Story", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.HiddenFor(m => m.StoryId)
                    @Html.HiddenFor(m => m.UserId)
                    <label>Category</label>
                    @Html.DropDownListFor(m => m.CategoryId, Model.CategoryItems, "-Choose One-", new { @class = "form-control", placeholder = "Title" })
                    <label>Intimacy Level</label>
                    @Html.DropDownListFor(m => m.IntimacyId, Model.IntimacyItems, "-Choose One-", new { @class = "form-control", placeholder = "Title" })
                    <label>Title</label>
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Title" })
                    <label>Tag</label>
                    @Html.TextBoxFor(m => m.HashtagWord, new { @class = "form-control", placeholder = "Hashtag" })
                    <label>Story</label>
                    @Html.TextAreaFor(m => m.Content)
                    <br/>
                    <button type="submit" class="btn btn-sm btn-primary">Save</button>
                    @Html.ActionLink("Cancel", "List", "Story", null, new { @class = "btn btn-sm btn-info" })
                </div>
            }
        </div>
    </div>
</body>
</html>
