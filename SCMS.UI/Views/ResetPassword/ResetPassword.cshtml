@model SCMS.Models.ViewModels.ResetPasswordVM

@{
    ViewBag.Title = "ResetPassword";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Reset Password</h3>
    </div>
</div>
<div class="row">
    <div class="col-xs-3">
        @using (Html.BeginForm("ResetPassword", "ResetPassword", FormMethod.Post))
        {
            <div class="form-group">
                @Html.HiddenFor(m => m.UserName)
                <label>Current Password</label>
                @Html.ValidationMessageFor(m => m.PasswordHash)
                @Html.PasswordFor(m => m.PasswordHash, new { @class = "form-control", placeholder = "Current Password" })
                <label>New Password</label>
                @Html.ValidationMessageFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "New Password" })
                <label>Retype New Password</label>
                @Html.ValidationMessageFor(m => m.NewPasswordRetype)
                @Html.PasswordFor(m => m.NewPasswordRetype, new { @class = "form-control", placeholder = "Retype New Password" })
                <hr />
                <div class="divSave">
                    <button class="btn btn-primary">Reset</button>
                    @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-info" })
                </div>
            </div>
        }
    </div>
</div>


