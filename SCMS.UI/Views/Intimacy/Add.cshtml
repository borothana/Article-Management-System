@model SCMS.Models.Intimacy

@{
    ViewBag.Title = "Add";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Add Intimacy</h3>
        @Html.ActionLink("Return to List", "Intimacy", "Intimacy")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>Intimacy</label>
                @Html.TextBoxFor(i => i.Description, new { @class = "form-control", placeholder = "Intimacy Level" })
            </div>
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
        }
    </div>
</div>      