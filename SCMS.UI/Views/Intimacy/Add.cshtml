@model SCMS.Models.Intimacy

@{
    ViewBag.Title = "Add";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Add Intimacy</h3>
    </div>
</div>
<div class="row">
    <div class="col-xs-3">
        @using (Html.BeginForm("Add", "Intimacy", FormMethod.Post))
        {
            <div class="form-group">
                <label>Description</label>
                @Html.TextBoxFor(i => i.Description, new { @class = "form-control", placeholder = "Intimacy Level" })
            </div>
            <hr />
            <div class="divSave">
                <button type="submit" class="btn btn-primary">Save</button>
                @Html.ActionLink("Cancel", "List", "Intimacy", null, new { @class = "btn btn-info" })
            </div>
        }
    </div>
</div>      