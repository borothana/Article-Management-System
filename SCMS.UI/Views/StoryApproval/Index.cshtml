@model List<SCMS.Models.Story>

@{
    ViewBag.Title = "Index";
}

<h2>Stories Pending Approval</h2>

<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped" style="width: auto;">
            <thead>
                <tr>
                    <th>Stories</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var story in Model)
                {
                    <tr>
                        <td>@story.Title</td>
                        <td></td>
                        <td>@Html.ActionLink("View", "ViewStory", "StoryApproval", new { id =  story.StoryId}, null)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
