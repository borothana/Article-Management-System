@model SCMS.Models.Story

@{
    ViewBag.Title = "ViewStory";
}

<div class="row">
    <div class="col-xs-12">
        <h3>User Story For Approval</h3>
        @Html.ActionLink("Return to List", "Index", "StoryApproval")
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("ViewStory", "Index", FormMethod.Post))
        {
            @Html.HiddenFor(c => c.CategoryId)
            <br />
            <label>Story To Approve/Deny</label>
            <br />
            @Html.TextAreaFor(s => s.Content, 10, 40, htmlAttributes: new { style = "width: 80%; max-width: 80%" })
            <br/>
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
            @Html.ActionLink("Cancel", "Index", "StoryApproval", null, new { @class = "btn btn-sm btn-info" })
        }
    </div>
</div>

