@model List<SCMS.Models.Info>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="col-xs-12">
        <center>
            <h3>BLOG POSTS</h3>
        </center>

        @foreach (var b in @Model)
        {
            <div class="row" style="background-color:transparent;">
                <b>@b.Title</b><br />
                <span>@Html.Raw(HttpUtility.HtmlDecode(b.Description))</span>
            </div>
            <br />
        }

    </div>
</div>