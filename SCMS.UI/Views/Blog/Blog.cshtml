@model SCMS.Models.ViewModels.BlogVM
@{
    ViewBag.Title = "Index";
}
<div class="container">
        <div class="col-sm-12">
            <center>
                <h3>BLOG POSTS</h3>
            </center>

            @foreach (var b in Model.Blog)
                {
                <div class="row" style="background-color:transparent;">
                    <a href="@Url.Action("Blog", "Blog")" id="title">@b.Title</a><br />
                    <span>Post by: @Model.User.FirstOrDefault(u => u.Id == b.UserId).Nickname </span>
                    <br />
                    @b.Content
                    <br />
                    <hr />
                </div>
            }
            
        </div>
    
</div>