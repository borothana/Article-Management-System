@model SCMS.Models.Info

@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Delete Information</h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-4">
            @using (Html.BeginForm("Delete", "Info", FormMethod.Post))
            {
                @Html.HiddenFor(m=>m.InfoId)        
                <p>Are you sure that you wish to delete information @Html.DisplayFor(m=>m.Title)?</p>
                <div class="divSave">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    @Html.ActionLink("Cancel", "List", "Info", new { @class = "btn btn-info" })
                </div>
            }
    </div>
</div>