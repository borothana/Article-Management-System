@model SCMS.Models.Category

@{
    ViewBag.Title = "AddCategory";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Add Category</h3>
    </div>
</div>
<div class="row">
    <div class="col-xs-3">
        @using (Html.BeginForm("Add", "Category", FormMethod.Post))
        {
            <div class="form-group">
                <label>Description</label>
                @Html.TextBoxFor(s => s.Description, new { @class = "form-control", placeholder = "Description" })
            </div>
            <hr />
            <div class="divSave">
                <button type="submit" class="btn btn-primary">Save</button>
                @Html.ActionLink("Cancel", "List", "Category", null, new { @class = "btn btn-info" })
            </div>
        }
    </div>
</div>      