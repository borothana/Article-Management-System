@model SCMS.Models.Category
@{
    ViewBag.Title = "EditCategory";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Edit Category</h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-3">
        @using (Html.BeginForm("Edit", "Category", FormMethod.Post))
        {
            @Html.HiddenFor(c => c.CategoryId)
            <label>Description</label>
            @Html.TextBoxFor(d => d.Description, new { @class = "form-control" })
            <hr />
            <div class="divSave">
                <button type="submit" class="btn btn-primary">Save</button>
                @Html.ActionLink("Cancel", "List", "Category", null, new { @class = "btn btn-info" })
            </div>
        }
    </div>
</div>
