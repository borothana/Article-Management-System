@model SCMS.Models.Category
@{
    ViewBag.Title = "DeleteCategory";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Delete Category</h3>
        @Html.ActionLink("Return to List", "List", "Category")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("Delete", "Category", FormMethod.Post))
        {
            @Html.HiddenFor(c => c.CategoryId)
            <p>Are you sure that you wish to delete the category @Html.DisplayFor(d => d.Description)?</p>
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            @Html.ActionLink("Cancel", "List", "Category", null, new { @class = "btn btn-sm btn-info" })
        }
    </div>
</div>     