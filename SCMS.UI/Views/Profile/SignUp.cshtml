@model SCMS.Models.ViewModels.UserVM

@{
    ViewBag.Title = "Add";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Sign up</h3>
        @Html.ActionLink("Return to home page", "Home", "Home")
    </div>
</div>
<div class="row">
    <div class="col-xs-4">
        @using (Html.BeginForm("SignUp", "Profile", FormMethod.Post))
        {
            <div class="form-group">
                @Html.ValidationSummary(true)
                <label>User Name</label>
                @Html.ValidationMessageFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "User Name" })

                <label>Display Name</label>
                @Html.ValidationMessageFor(m => m.Phone)
                @Html.TextBoxFor(m => m.Nickname, new { @class = "form-control", placeholder = "Display Name" })
                
                <label>Email</label>
                @Html.ValidationMessageFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                
                <label>Phone</label>
                @Html.ValidationMessageFor(m => m.Phone)
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Phone" })
                
                <label>Password</label>
                @Html.ValidationMessageFor(m => m.PasswordHash)
                @Html.TextBoxFor(m => m.PasswordHash, new { @class = "form-control", placeholder = "Password" })
                
                <label>Confirm Password</label>
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })

                <label>Quote</label>
                @Html.TextAreaFor(m => m.Quote, new { @class = "form-control", placeholder = "Quote" })

                <hr />
                <div class="divSave">
                    <button type="submit" class="btn btn-primary">Save</button>
                    @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-info" })
                </div>
            </div>
        }
    </div>
</div>
